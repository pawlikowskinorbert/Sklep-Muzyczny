@model RegisterViewModel


<div class="container d-flex justify-content-center align-items-center" style="margin-top: 100px;">
    <div class="card shadow-lg" style="width: 30rem;">
        <div class="card-body">
            <h3 class="card-title text-center mb-2">Rejestracja</h3>
            <form asp-action="Register" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group mb-1">
                    <label asp-for="UserName" class="form-label">Nazwa Użytkownika</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group mb-1">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-1">
                    <label asp-for="FirstName" class="form-label">Imię</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group mb-1">
                    <label asp-for="LastName" class="form-label">Nazwisko</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group mb-1">
                    <label asp-for="Password" class="form-label">Hasło</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-1">
                    <label asp-for="ConfirmPassword" class="form-label">Potwierdź Hasło</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-3">Zarejestruj się</button>
            </form>
        </div>
    </div>
</div>
